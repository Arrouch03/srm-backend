<?xml version="1.0" encoding="UTF-8"?>
<persistence version="3.0"
             xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd">

    <persistence-unit name="my_persistence_unit" transaction-type="JTA">
        <!-- On utilise directement la ressource JDBC déclarée dans GlassFish -->
        <jta-data-source>jdbc/SrmbdDS</jta-data-source>

        <properties>
            <!-- Log SQL avec EclipseLink -->
            <property name="eclipselink.logging.level" value="FINE"/>
            <!-- Plateforme Oracle pour éviter la détection automatique (souvent Derby par défaut) -->
            <property name="eclipselink.target-database" value="Oracle"/>
        </properties>
    </persistence-unit>
</persistence>
